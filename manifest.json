{
    "name": "Study Timer",
    "version": "1.0",
    "description": "Study timer!",
    "permissions": [
        "storage",
        "notifications"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/favicon-16x16.png",
            "32": "images/favicon-32x32.png",
            "48": "images/android-chrome-192x192.png",
            "128": "images/android-chrome-192x192.png"
        }
    },
    "icons": {
        "16": "images/favicon-16x16.png",
        "32": "images/favicon-32x32.png",
        "48": "images/android-chrome-192x192.png",
        "128": "images/android-chrome-192x192.png"
    },
    "manifest_version": 2
}